<!DOCTYPE html>
<html lang="en">
<head>

    <meta name="viewport" content="minimum-scale=1.0, width=device-width, maximum-scale=1.0, user-scalable=no"/>
    <meta charset="utf-8">

    <title>Rectangles</title>

    <link rel="stylesheet" href="stylesheets/style.css">
</head>
<body>

    <h1>Rectangle Storage</h1>

    <section>
        <legend>New Rectangle</legend>
        <h3>Note: Rectangles that are too large may not display properly</h3>
        <input type="text" id="name" name="name" placeholder="Name" required /> <br>
        <input type="number" id="width" name="width" placeholder="Width (px)" required /> <br>
        <input type="number" id="height" name="height" placeholder="Height (px)" required /> <br>
        <label for="color">Color</label>
        <input type="color" id="color" name="color" value="#FF0000" required /> <br>

        <button onclick="addRect()">Add Rectangle</button>
    </section>

    <h3>Current Rectangles: (Click on a rectangle to view its details. Hover over a rectangle to see its name.)</h3>

    <!-- Rectangles appear here -->
    <ul>
        <% result.forEach(function(r) { %>
            <li id="<%= r.id %>">
                <div style="width: <%= r.width %>px; height: <%= r.height %>px; background-color: <%= r.color  %>" class="rectangle" title="<%= r.name %> "></div>

                <button class="del">Delete</button>
                <button class="edit">Edit</button>
            </li>
        <% }); %>
    
    </ul>

    <script src="javascripts/jquery.min.js"></script>
    <script src="javascripts/script.js"></script>
</body>
</html>